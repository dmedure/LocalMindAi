{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "LocalMind AI Agent",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "dialog": {
        "all": true
      },
      "shell": {
        "execute": true,
        "open": true
      },
      "notification": {
        "all": true
      },
      "globalShortcut": {
        "all": false
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "process": {
        "relaunch": true,
        "exit": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:11434/**", "http://localhost:8000/**"]
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.localmind.ai-agent",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": "all",
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "LocalMind AI Agent",
      "longDescription": "Privacy-focused local AI agent with knowledge transfer capabilities"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "LocalMind AI Agent",
        "width": 1200,
        "center": true,
        "minHeight": 600,
        "minWidth": 800
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
}